<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

　  <p>名前：
    <div class="field">
    <%= f.label :（性） %>
    <%= f.text_field :first_name, autocomplete: "current-first_name" %>
    </div>

    <div class="field">
    <%= f.label :（名） %>
    <%= f.text_field :last_name, autocomplete: "current-last_name" %>
    </div>
  </p>

  <p>フリガナ：
    <div class="field">
    <%= f.label :（セイ） %>
    <%= f.text_field :first_name_kana, autocomplete: "current-first_name_kana" %>
    </div>
    <div class="field">
    <%= f.label :（メイ） %>
    <%= f.text_field :last_name_kana, autocomplete: "current-last_name_kana" %>
    </div>
  </p>

  <p>
    <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "current-email" %>
    </div>
  </p>

  <p>
    <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br />
    <%= f.number_field :postal_code, autocomplete: "current-post_cade" %>
    </div>
  </p>

  <p>
    <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autocomplete: "current-address" %>
    </div>
  </p>

  <p>
    <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
    <%= f.number_field :telephone_number, autocomplete: "current-telphone_number" %>
    </div>
  </p>

  <p>
    <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>（6文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  　</div>
  </p>

  <p>
  <div class="field">
    <%= f.label :パスワード（再確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  </p>

  <p>
    <div class="actions">
    <%= f.submit "新規登録" %>
    </div>
  </p>
<% end %>


<h1>既に登録済みの方</h1>
<p><%= link_to "こちら",  new_customer_session_path %>からログインしてください。 </p>


