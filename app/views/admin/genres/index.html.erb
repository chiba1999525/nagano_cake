<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url:admin_genres_path, method: :post, local:true do |f| %>
<p>ジャンル名
<%= f.text_field :name %></p>

<p><%= f.submit "新規登録" %></p>
<% end %>

<table>
  <thead>
    <th>ジャンル</th>
    <th></th>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <td><%= genre.name %></td>
    <td><%= link_to "編集", edit_admin_genre_path(genre.id) %></td>
  </tbody>
  <% end %>
</table>



