<div class="container">
  <div class="row">
    <div class="col-lg-4">

      <table>
        <thead>
        <th>ジャンル検索</th>
        </thead>

        <% @genres.each do |genre| %>
        <tbody>
        <td><%= genre.name %></td>
        </tbody>
        <% end %>
      </table>


    </div>
    <div class="col-lg-8">
      <table class="table table-srtiped">

        <div class="main">
        <div class ="item">
        <%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg' %>
        <p><%= @item.name %></p>
        <p><%= @item.introduction %></p>
        <p>¥<%= @item.price %></p>

           <%= form_with model: @cart_item, url: public_cart_items_path, local:true do |f| %>

        <p>個数を選択<%= f.hidden_field :item_id, value: @item.id %>
        <%= f.select :amount, *[1..3] %></p>

        <p><%= f.submit "カートに入れる" %></p>
        <% end %>

       </div>
       </div>


      </table>
    </div>
  </div>
</div>