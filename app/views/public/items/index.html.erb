<div class="container">
  <div class="row">
    <div class="col-lg-4">

      <table>
        <thead>
        <th>ジャンル検索</th>
        </thead>

        <% @genres.each do |genre| %>
        <tbody>
        <td><%= genre.name %></td>
        </tbody>
        <% end %>
      </table>


    </div>
    <div class="col-lg-8">
      <table class="table table-srtiped">

        <h1>商品一覧（全<%= @items.count %>　件）</h1>

        <% @items.each do |item| %>
        <div class="main">
        <div class ="item">
        <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

        <%= link_to public_item_path(item.id) do %>
        <p><%= item.name %></p>
        <% end %>
        <p>¥<%= item.price %></p>
       </div>
        <% end %>
       </div>


      </table>
    </div>
  </div>
</div>