<h1>配送先登録/一覧</h1>

<%= form_with model: @address, url:public_addresses_path, local:true do |f| %>
<p>郵便番号：<%= f.text_field :postal_code %></p>
<p>住所：<%= f.text_field :address %></p>
<p>宛名：<%= f.text_field :name %></p>

<%= f.submit "新規登録" %>
<% end %>

<table>
  <thead>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </thead>
  <% @addresses.each do |address| %>
  <tbody>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td><%= link_to "変更する", edit_public_address_path(address.id) %><%= link_to "削除する", public_address_path(address.id), method: :delete %></td>
  </tbody>
  <% end %>
</table>