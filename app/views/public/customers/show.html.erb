<h1>マイページ</h1>

<h2>登録情報</h2><%= link_to "編集する", edit_public_customer_path(@customer.id) %>

<table>
    <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
    </tr>
    <tr>
        <th>氏名</th>
        <td><%= @customer.first_name %><%= @customer.last_name %></td>
    </tr>
    <tr>
        <th>フリガナ</th>
        <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
    </tr>
    <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
    </tr>
    <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
    </tr>
</table>

<p>配送先一覧:<%= link_to "一覧を見る", public_addresses_path(@customer.id) %></p>

<p>注文履歴:<%= link_to "一覧を見る", public_orders_path %></p>
